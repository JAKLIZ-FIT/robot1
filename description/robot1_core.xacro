<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro"/>

    <material name="blue">
        <color rgba="0 0 0.8 1"/>
    </material>

    <material name="green">
        <color rgba="0 0.8 0 1"/>
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <!--BASE LINK-->

    <link name="base_link">
    </link>

    <!--CHASSIS (BOX) LINK-->

    <link name="box_link">
        <visual>
            <geometry>
                <box size="0.46 0.22 0.01"/>
            </geometry>
            <material name="green"/>
            <origin xyz="0.23 0 0.005" rpy="0 0 0"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.46 0.22 0.01"/>
            </geometry>
            <origin xyz="0.23 0 0.005" rpy="0 0 0"/>
        </collision>
        <xacro:inertial_box mass="2" x="0.46" y="0.22" z="0.01">
            <origin xyz="0.23 0 0.005" rpy="0 0 0"/>
        </xacro:inertial_box> 
    </link>

    <joint name="base_to_box_joint" type="fixed">
        <parent link="base_link"/>
        <child link="box_link"/>
        <origin xyz="-0.305 0 -0.03" rpy="0 0 0"/>
    </joint>

    <!--WHEEL AXIS-->

    <link name="wheel_axis">
        <visual>
            <geometry>
                <cylinder length="0.375" radius="0.02"/>
            </geometry>
            <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
            <material name="green"/>
        </visual> 
        <collision>
            <geometry>
                <cylinder length="0.375" radius="0.02"/>
            </geometry>
            <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
        </collision> 
        <xacro:inertial_cylinder mass="0.5" length="0.375" radius="0.02">
            <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
        </xacro:inertial_cylinder> 
    </link>

    <joint name="base_to_wheel_axis" type="fixed">
        <parent link="base_link"/>
        <child link="wheel_axis"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <!--LEFT WHEEL-->

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder length="0.09" radius="0.085"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.09" radius="0.085"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </collision>
        <xacro:inertial_cylinder mass="0.25" length="0.09" radius="0.085">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <joint name="base_to_left_wheel" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 0.1875 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <!--RIGHT WHEEL-->
    
    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder length="0.09" radius="0.085"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.09" radius="0.085"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </collision>
        <xacro:inertial_cylinder mass="0.25" length="0.09" radius="0.085">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <joint name="base_to_right_wheel" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0 -0.1875 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <!--PIVOT (CASTER WHEEL) LINK-->

    <link name="rear_pivot">
        <visual>
            <geometry>
                <sphere radius="0.025"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.025"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.025">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <joint name="base_to_rear_pivot" type="fixed">
        <parent link="base_link"/>
        <child link="rear_pivot"/>
        <origin xyz="-0.27 0 -0.06"/>
    </joint>

</robot>